{
  "compilerOptions": {
    "noImplicitThis": true,
    "alwaysStrict": true,
    "strictBindCallApply": true,
    "strictNullChecks": true,

    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2015",
    "lib": [
      "ESNext"
    ],
    "moduleResolution": "node",
    "outDir": ".build"
  },
  "exclude": [
    "node_modules"
  ]
}
